{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "incremental": true,
    "moduleResolution": "node",
    "composite": true,
    "baseUrl": "./"
  },
  "include": [
    "apps/**/*.ts",
    "src/**/*.ts"
  ],
  "extends": "../tsconfig.base.json",
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
